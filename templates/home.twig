{% extends 'site.twig' %}

{% block page_header %}WoZ Notify{% endblock %}
{% block page_subheader %}{% endblock %}

{% block content %}

    <div class="row">
        {% set foo = ["abstract","animals","business","cats","city","food","nightlife","fashion","people","nature","sports","technics","transport"] %}

        {% for room in rooms %}
        <div class="col-xs-6 col-md-4">
            <div class="thumbnail">
                <img alt="300x200" src="http://lorempixel.com/600/200/{{ foo[loop.index] }}" />
                <div class="caption">
                    <h3>
                        {{ room.name }}
                    </h3>
                    <p>{{  room.desc }}</p>
                    <p>
                        <a class="btn btn-primary" href="{{ urlFor('room',{ 'name' : room.id }) }}">Open</a>
                    </p>
                </div>
            </div>
        </div>
            {% endfor %}
    </div>




    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Admin</h3>
        </div>
        <div class="panel-body">
            <div class="row">


                <div class="col-md-4">
                    <div class="thumbnail">

                        <div class="caption">
                            <h3>
                                Alert / Notification
                            </h3>
                            <p>

                            </p>
                            <p>
                                <a class="btn btn-warning" href="{{ urlFor('admin') }}">Editor</a>
                                <a class="btn btn-success" href="{{ urlFor('timeline') }}">Monitor</a>
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>




{%  endblock %}